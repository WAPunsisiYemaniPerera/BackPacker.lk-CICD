<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#C5BEBE" />
            <solid android:color="#E0E0E0" /> <!-- Optional: Add a background color when pressed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#C5BEBE" />
            <solid android:color="#FFFFFF" /> <!-- Optional: Default background color -->
        </shape>
    </item>
</selector>
